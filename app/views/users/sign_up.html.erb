<% if @user.errors.any? %>
  <tr>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </tr>
<% end %>

<h1>會員註冊</h1>
<%= form_for(@user, url: '/sign_up/account_verify') do |form| %>
  <div class="fields">
    <%= form.label :email, '信箱' %>
    <%= form.email_field :email  %>
    <% @user.errors.full_messages_for(:email).each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </div>

  <div class="fields">
    <%= form.label :name, '姓名' %>
    <%= form.text_field :name %>
  </div>

  <div class="fields">
    <%= form.label :password, '密碼' %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit '註冊' %>
  </div>
<% end %>

<%= link_to "回到任務總覽", '/' %>